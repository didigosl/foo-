<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <CheckBox
        android:id="@+id/select_cb"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_centerVertical="true"
        android:layout_margin="15dp"
        android:background="@drawable/cb_address"
        android:button="@null" />

    <ImageView
        android:id="@+id/icon_iv"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerVertical="true"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/select_cb"
        android:scaleType="fitXY" />

    <TextView
        android:id="@+id/name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/icon_iv"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="15dp"
        android:layout_toRightOf="@id/icon_iv"
        android:ellipsize="end"
        android:maxLines="3"
        android:textColor="#FF3C4151"
        android:textSize="14sp"
        tools:text="时尚丝绒羽绒服女中长款冬季2017新款女装连帽外套 时尚丝绒羽绒服女中长款冬季2017新款女装连帽外套" />

    <RelativeLayout
        android:id="@+id/delete_rl"
        android:layout_width="40dp"
        android:layout_height="30dp"
        android:layout_alignBottom="@id/icon_iv"
        android:layout_alignParentRight="true">

        <ImageView
            android:layout_width="13dp"
            android:layout_height="16dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:background="@drawable/ic_delete" />
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/plus_rl"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignBottom="@id/icon_iv"
        android:layout_marginRight="10dp"
        android:layout_toRightOf="@id/icon_iv">

        <ImageView
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_centerInParent="true"
            android:background="@drawable/ic_plus_icon" />
    </RelativeLayout>

    <TextView
        android:id="@+id/count_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/icon_iv"
        android:layout_toRightOf="@id/plus_rl"
        android:gravity="center"
        android:minWidth="30dp"
        android:text="1"
        android:textColor="#FF45CBC0"
        android:textSize="19sp"/>

    <RelativeLayout
        android:id="@+id/minus_rl"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignBottom="@id/icon_iv"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/count_tv">

        <ImageView
            android:layout_width="10dp"
            android:layout_height="2dp"
            android:layout_centerInParent="true"
            android:background="@drawable/ic_minus_icon" />
    </RelativeLayout>

    <TextView
        android:id="@+id/price_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/count_tv"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@id/icon_iv"
        android:textColor="@color/main_price"
        android:textSize="16sp"
        tools:text="€ 180.76" />
</RelativeLayout>