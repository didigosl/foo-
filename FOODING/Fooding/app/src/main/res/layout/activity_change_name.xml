<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_pure"
    android:orientation="vertical">

    <RelativeLayout
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/root_titlebar_rl"
        android:layout_width="match_parent"
        android:layout_height="@dimen/Title_height"
        android:layout_gravity="center_vertical"
        android:background="@color/white_pure"
        android:orientation="horizontal"
        tools:ignore="Overdraw">

        <ImageView
            android:id="@+id/back_titlebar_iv"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_margin="@dimen/CommonMargin"
            android:src="@drawable/ic_back_icon"
            android:visibility="visible" />

        <TextView
            android:id="@+id/title_titlebar_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:ellipsize="end"
            android:gravity="center"
            android:lines="1"
            android:text="@string/profile"
            android:textColor="#FF3C4151"
            android:textSize="17sp" />

        <RelativeLayout
            android:id="@+id/finish_rl"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:text="@string/complete"
                android:textColor="@color/hong"
                android:textSize="16sp" />

        </RelativeLayout>


        <View
            android:id="@+id/title_divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="@color/grey_sp" />

    </RelativeLayout>

    <EditText

        android:id="@+id/name_et"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/root_titlebar_rl"
        android:layout_margin="15dp"
        android:background="#FFF6F6F6"
        android:hint="@string/enter_name_plase"
        android:paddingLeft="10dp"
        android:textColor="@color/black_text"
        android:textColorHint="#FFA4A4A4"
        android:textSize="14sp" />
</RelativeLayout>